<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.fipro.eclipse.migration.ui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.fipro.eclipse.migration.ui.Perspective"
            icon="icons/eclipse16.png"
            id="org.fipro.eclipse.migration.ui.perspective"
            name="RCP Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <e4view
            class="org.fipro.eclipse.migration.ui.view.overview.OverviewView"
            icon="icons/prop_ps.gif"
            id="org.fipro.eclipse.migration.ui.overview"
            name="Overview"
            restorable="true">
      </e4view>
      <view
            class="org.fipro.eclipse.migration.ui.view.DetailView"
            icon="icons/editor.gif"
            id="org.fipro.eclipse.migration.ui.detailview"
            name="Details"
            restorable="true">
      </view>
      <e4view
            class="org.fipro.eclipse.migration.ui.view.DescriptionView"
            icon="icons/environment_obj.gif"
            id="org.fipro.eclipse.migration.ui.descview"
            name="Description"
            restorable="true">
      </e4view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="org.fipro.eclipse.migration.ui.overview"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.fipro.eclipse.migration.ui.descview"
               minimized="false"
               ratio="0.75"
               relationship="bottom"
               relative="org.fipro.eclipse.migration.ui.overview">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         id="MigrationTutorial"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.fipro.eclipse.migration.ui.application"
            name="Migration Tutorial">
         <property
               name="appName"
               value="Migration Tutorial">
         </property>
         <property
               name="windowImages"
               value="icons/eclipse16.png,icons/eclipse32.png">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="Commands">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.fipro.eclipse.migration.ui.editor.PersonEditor"
            default="false"
            icon="icons/editor.gif"
            id="org.fipro.eclipse.migration.ui.editor.personeditor"
            name="Person Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.fipro.eclipse.migration.ui.preferences.DescriptionPreferencePage"
            id="org.fipro.eclipse.migration.ui.page1"
            name="Description">
      </page>
   </extension>
   <extension
         id="org.fipro.eclipse.migration.ui.fragment"
         point="org.eclipse.e4.workbench.model">
      <fragment
            uri="fragment.e4xmi">
      </fragment>
   </extension>

</plugin>
